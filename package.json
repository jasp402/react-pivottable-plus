{
  "name": "react-pivottable-plus",
  "version": "1.0.12",
  "description": "A React-based pivot table with grouping and modern UI (Tailwind, Radix, Shadcn)",
  "main": "dist/PivotTableUI.js",
  "module": "dist/PivotTableUI.js",
  "exports": {
    ".": "./dist/PivotTableUI.js",
    "./PivotTable": "./dist/PivotTable.js",
    "./Utilities": "./dist/Utilities.js",
    "./TableRenderers": "./dist/TableRenderers.js",
    "./PlotlyRenderers": "./dist/PlotlyRenderers.js",
    "./SubtotalRenderers": "./dist/SubtotalRenderers.js",
    "./renderers/*": "./dist/renderers/*.js",
    "./hooks/*": "./dist/hooks/*.js",
    "./pivottable.css": "./pivottable.css",
    "./grouping.css": "./grouping.css"
  },
  "files": [
    "dist/",
    "pivottable.css",
    "grouping.css"
  ],
  "scripts": {
    "dev": "vite",
    "start": "npm run dev",
    "test:eslint": "eslint src/*.js* && echo 'eslint: \\033[0;32m'PASS'\\033[0m'",
    "test:eslint:fix": "eslint src/*.js* --fix",
    "test:prettier": "prettier -l \"src/*.js*\" && echo 'prettier: \\033[0;32m'PASS'\\033[0m'",
    "test:prettier:fix": "prettier  --write \"src/*.js*\"",
    "test:jest": "jest",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:jest",
    "clean": "shx rm -rf dist __tests__ PivotTable.js* PivotTableUI.js* PlotlyRenderers.js* TableRenderers.js* Utilities.js* pivottable.css grouping.css renderers/ hooks/",
    "build": "npm run clean && shx mkdir -p dist && shx cp src/pivottable.css . && shx cp src/grouping.css . && babel src --out-dir=dist --source-maps --presets=@babel/preset-env,@babel/preset-react",
    "build:examples": "vite build",
    "doPublish": "npm run build && npm publish",
    "postpublish": "npm run clean",
    "bump": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major",
    "docs:dev": "cd docs && next dev -p 3001",
    "docs:build": "cd docs && npm run build",
    "release": "npm run bump && git add package.json && git commit -m \"chore: bump version\" && git push origin master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasp402/react-pivottable-plus.git"
  },
  "keywords": [
    "react",
    "pivottable",
    "grouping",
    "subtotals",
    "tailwind",
    "radix-ui",
    "shadcn"
  ],
  "author": "Jasp402 <https://github.com/jasp402>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasp402/react-pivottable-plus/issues"
  },
  "homepage": "https://github.com/jasp402/react-pivottable-plus#readme",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immutability-helper": "^2.3.1",
    "lucide-react": "^0.575.0",
    "nextra": "^3.3.1",
    "nextra-theme-docs": "^3.3.1",
    "prop-types": "^15.8.1",
    "react-draggable": "^4.4.6",
    "react-sortablejs": "^6.1.4",
    "sortablejs": "^1.15.2",
    "tailwind-merge": "^3.5.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-plotly.js": "^2.6.0",
    "rimraf": "^6.1.3",
    "shx": "^0.4.0",
    "tailwindcss": "^4.0.0",
    "vite": "^5.1.4"
  }
}
